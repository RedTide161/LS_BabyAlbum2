            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/et_b_weather"
            app:layout_constraintStart_toStartOf="@+id/tv_b_contraction_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_b_contraction_start" />

        <TextView
            android:id="@+id/tv_b_contr_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_contr_start_time"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_b_contr_start_time"
            app:layout_constraintEnd_toStartOf="@+id/et_b_contr_start_time"
