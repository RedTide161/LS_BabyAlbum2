<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutTR2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_twocolored_greenblue">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivbg_tir_pic3"
            android:layout_width="142dp"
            android:layout_height="133dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/marginSpacer"
            app:srcCompat="@drawable/baby_sitting" />


        <TextView
            android:id="@+id/tv_tir_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_tir_text_5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_tir_pic_2" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_tir_inputText_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="12"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/et_tir_inputText_6"
            app:layout_constraintStart_toStartOf="@+id/tv_tir_text_5"
            app:layout_constraintTop_toBottomOf="@+id/tv_tir_text_5" />

        <TextView
            android:id="@+id/tv_tir_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_tir_text_2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/et_tir_inputText_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_tir_inputText_5" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_tir_inputText_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="@+id/tv_tir_text_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_tir_text_6" />

        <TextView
            android:id="@+id/tv_tir_poem"
            android:layout_width="203dp"
            android:layout_height="129dp"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/pircture_frame2"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/tv_tir_poem"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"

            app:layout_constraintEnd_toStartOf="@+id/ivbg_tir_pic3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_tir_inputText_6" />

        <androidx.legacy.widget.Space
            android:id="@+id/marginSpacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tir_poem"
            app:layout_constraintLeft_toLeftOf="@+id/tv_tir_poem"
            app:layout_constraintRight_toRightOf="@+id/tv_tir_poem" />


        <LinearLayout
            android:id="@+id/ll_tir_pic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:background="@drawable/shadow"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_tir_pic_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/add_icon_imageview"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>