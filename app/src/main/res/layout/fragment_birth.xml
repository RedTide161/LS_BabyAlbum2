            app:layout_constraintBaseline_toBaselineOf="@+id/tv_b_contr_start_date"
            app:layout_constraintEnd_toStartOf="@+id/tv_b_contr_start_date"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_b_contr_start_time" />

        <TextView
            android:id="@+id/tv_b_contr_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_b_contr_start_tud"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_b_contr_start_date"
            app:layout_constraintEnd_toStartOf="@+id/et_b_contr_start_date"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_b_contr_start_time" />

        <EditText
            android:id="@+id/et_b_contr_start_date"
