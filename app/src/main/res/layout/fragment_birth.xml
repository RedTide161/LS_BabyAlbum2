            android:layout_marginRight="72dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_b_delivery_room_text_4"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_b_delivery_room_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_b_delivery_room_duration" />

        <TextView
            android:id="@+id/tv_b_delivery_room_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_delivery_room_text_5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_b_delivery_room_text_3" />

        <TextView
            android:id="@+id/tv_b_location_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_location_of_birth"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/tv_b_delivery_room_text_5"
            app:layout_constraintTop_toBottomOf="@+id/ivbg_b_pic2" />


        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
