<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bkgnd_sv_ht"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_waterdrops">

        <LinearLayout
            android:id="@+id/ll_fb_baby2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/shadow"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_fb_baby2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/add_icon_imageview"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_fb_text_3"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="end"
            android:text="@string/tv_fb_text_3"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_fb_baby2" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_fb_textinput_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:gravity="end"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences|textMultiLine"
            android:nextFocusDown="@id/et_fb_textinput_4"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_fb_text_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_fb_text_3" />

        <TextView
            android:id="@+id/tv_fb_text_4"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="end"
            android:text="@string/tv_fb_text_4"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_fb_textinput_3" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_fb_textinput_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:gravity="end"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences|textMultiLine"
            android:nextFocusDown="@id/et_fb_textinput_5"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_fb_text_4"
            app:layout_constraintTop_toBottomOf="@+id/tv_fb_text_4" />

        <TextView
            android:id="@+id/tv_fb_text_5"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="end"
            android:text="@string/tv_fb_text_5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_fb_textinput_4" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionDoneEditText
            android:id="@+id/et_fb_textinput_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:gravity="end"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences|textMultiLine"
            android:paddingBottom="24dp"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_fb_text_5"
            app:layout_constraintTop_toBottomOf="@+id/tv_fb_text_5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>