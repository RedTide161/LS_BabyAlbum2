            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="15"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/et_b_name_midwife"
            app:layout_constraintStart_toStartOf="@+id/tv_b_location_of_birth"
            app:layout_constraintTop_toBottomOf="@+id/tv_b_location_of_birth" />

        <TextView
            android:id="@+id/tv_b_name_midwife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_name_midwife"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/et_b_location_of_birth"
            app:layout_constraintTop_toBottomOf="@+id/et_b_location_of_birth" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_b_name_midwife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/et_b_Hospital_Docs_midwife"
            app:layout_constraintStart_toStartOf="@+id/tv_b_name_midwife"
            app:layout_constraintTop_toBottomOf="@+id/tv_b_name_midwife" />

        <TextView
            android:id="@+id/tv_b_Hospital_Docs_midwife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_Hospital_Docs_midwife"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/et_b_name_midwife"
            app:layout_constraintTop_toBottomOf="@+id/et_b_name_midwife" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_b_Hospital_Docs_midwife"
