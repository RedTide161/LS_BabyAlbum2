<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutTR2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_twocolored_greenblue"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_tir_pic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_56sdp"
            android:layout_marginRight="@dimen/_56sdp"
            android:background="@drawable/shadow"
            android:elevation="@dimen/_8sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tir_pic_2"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/add_icon_imageview" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tir_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_tir_text_5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_tir_inputText_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/transparent"
            android:ems="12"
            android:fontFamily="@font/architects_daughter"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="2"
            android:maxLength="50"
            android:nextFocusDown="@id/et_tir_inputText_6"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_tir_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/_48sdp"
            android:layout_marginLeft="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_tir_text_2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionDoneEditText
            android:id="@+id/et_tir_inputText_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/_48sdp"
            android:layout_marginLeft="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/transparent"
            android:ems="11"
            android:fontFamily="@font/architects_daughter"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="2"
            android:maxLength="50"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_4sdp">

            <TextView
                android:id="@+id/tv_tir_poem"
                android:layout_width="@dimen/_173sdp"
                android:layout_height="@dimen/_99sdp"
                android:layout_gravity="left"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/pircture_frame2"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/tv_tir_poem"
                android:textColor="@color/colorBlack"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/ivbg_tir_pic3"
                android:layout_width="@dimen/_142sdp"
                android:layout_height="@dimen/_133sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:paddingBottom="@dimen/_8sdp"
                app:srcCompat="@drawable/baby_sitting" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>