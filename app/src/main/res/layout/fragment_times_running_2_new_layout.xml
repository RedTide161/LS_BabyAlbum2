<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutTR2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_twocolored_greenblue"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_tir_pic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_64sdp"
            android:layout_marginLeft="@dimen/_64sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/shadow"
            android:elevation="@dimen/_8sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tir_pic_2"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/add_icon_imageview" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivbg_tir_pic3"
            android:layout_width="@dimen/_142sdp"
            android:layout_height="@dimen/_133sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:baselineAligned="false"
            app:srcCompat="@drawable/baby_sitting" />

        <TextView
            android:id="@+id/tv_tir_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_tir_text_5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_tir_inputText_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/transparent"
            android:ems="12"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences|textMultiLine"
            android:nextFocusDown="@id/et_tir_inputText_6"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_tir_text_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_tir_text_2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_tir_inputText_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/architects_daughter"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tv_tir_poem"
            android:layout_width="@dimen/_203sdp"
            android:layout_height="@dimen/_129sdp"
            android:layout_marginStart="@dimen/_44sdp"
            android:layout_marginLeft="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/pircture_frame2"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/tv_tir_poem"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic" />


    </LinearLayout>
</RelativeLayout>