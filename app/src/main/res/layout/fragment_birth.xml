            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="end"
            android:text="@string/tv_b_delivery_room_text_1"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/et_b_delivery_room_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_b_weather" />

        <EditText
            android:id="@+id/et_b_delivery_room_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="5"
            android:focusable="false"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center_horizontal"
            android:inputType="none"
            android:textSize="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_b_delivery_room_text_1"
            app:layout_constraintEnd_toStartOf="@+id/tv_eye_color"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_b_delivery_room_text_1" />

        <TextView
            android:id="@+id/tv_b_delivery_room_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bubblegum_sans"
            android:gravity="start"
            android:text="@string/tv_b_delivery_room_text_2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_b_delivery_room_time"
            app:layout_constraintStart_toEndOf="@+id/et_b_delivery_room_time" />

        <TextView
            android:id="@+id/tv_b_delivery_room_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/tv_b_delivery_room_text_3"
            android:textColor="@color/colorBlack"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/et_b_delivery_room_duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_b_delivery_room_text_1" />

        <de.kdsoftworx.ls_babyalbum2.Helper.ActionNextEditText
            android:id="@+id/et_b_delivery_room_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="2"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="15dp"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/et_b_location_of_birth"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_b_delivery_room_text_3"
            app:layout_constraintEnd_toStartOf="@+id/tv_b_delivery_room_text_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_b_delivery_room_text_3" />

        <TextView
            android:id="@+id/tv_b_delivery_room_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
